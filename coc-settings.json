{
  "coc.preferences.formatOnSaveFiletypes": ["go", "rust"],
  "go.enable":true,
  "go.goplsOptions": {
    "completeUnimported": true
  },
  "languageserver": {
    "golang": {
      "command": "gopls",
      "filetypes": ["go"],
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },
    "rust": {
      "command": "rust-analyzer",
      "filetypes": ["rust"],
      "rootPatterns": ["Cargo.toml"]
    }
  }
}
